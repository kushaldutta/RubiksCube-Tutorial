<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Background">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Background"
            android:textSize="36dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/next1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Next" />

        <Button
            android:id="@+id/back1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="Back" />

        <TextView
            android:id="@+id/backintro"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/background"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:text="In this tutorial, you will learn how to solve the 3x3 Rubik's Cube in just 7 steps! First, let's learn some definitions that will help us in this tutorial."
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/cube"
            android:layout_width="148dp"
            android:layout_height="148dp"
            android:layout_below="@+id/backintro"
            android:layout_centerHorizontal="true"
            android:src="@drawable/rubikscube" />

        <TextView
            android:id="@+id/background_info1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cube"
            android:text="The Rubik’s Cube has three different types of pieces: centers, edges, and corners. Being familiar with these terms will make it easier to solve the cube."
            android:gravity="center"/>

        <TextView
            android:id="@+id/background_info2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/background_info1"
            android:text="There are 6 centers on every cube, each representing a different color. No matter how you move the cube, the centers will always be in the same position (blue is opposite from green, red is opposite from orange, white is opposite from yellow). The highlighted piece in the image is the center piece:"
            android:gravity="center"
            android:layout_marginTop="10sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/filler1"
            android:layout_width="148dp"
            android:layout_height="148dp"
            android:src="@drawable/center_piece"
            android:layout_below="@+id/background_info2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5sp"/>

        <TextView
            android:id="@+id/background_info3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/filler1"
            android:text="One edge piece represents two colors. When looking at one face on the cube, there are 4 visible edge pieces. The highlighted pieces in the image are the edge pieces:"
            android:gravity="center"
            android:layout_marginTop="10sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/filler2"
            android:layout_width="148dp"
            android:layout_height="148dp"
            android:src="@drawable/edge_pieces"
            android:layout_below="@+id/background_info3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5sp"/>

        <TextView
            android:id="@+id/background_info4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/filler2"
            android:text="One corner piece represents three colors. When looking at one face on the cube, there are 4 visible corner pieces. The highlighted pieces in the image are the corner pieces:"
            android:gravity="center"
            android:layout_marginTop="10sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/filler3"
            android:layout_width="148dp"
            android:layout_height="148dp"
            android:src="@drawable/corner_pieces"
            android:layout_below="@+id/background_info4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5sp"/>

        <TextView
            android:id="@+id/background_outro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Before starting the tutorial, make sure to look at the notation page on the home screen. Once you finish reading the notation and this background page, you are ready to start solving the Rubik’s Cube!"
            android:layout_below="@+id/filler3"
            android:layout_marginTop="10sp"
            android:gravity="center"/>

    </RelativeLayout>

</ScrollView>