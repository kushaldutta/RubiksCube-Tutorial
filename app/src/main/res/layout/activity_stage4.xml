<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".stage4">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/stage4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Stage 4"
            android:textSize="36dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/stage4_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>

        <Button
            android:id="@+id/stage4_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/stage4_goal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/stage4"
            android:layout_marginTop="10sp"
            android:text="Goal: Complete Yellow Cross"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textSize="18sp"/>


    </RelativeLayout>

</ScrollView>