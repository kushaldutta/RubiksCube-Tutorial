<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".stage4">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/stage4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Stage 4"
            android:textSize="36dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/stage4_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>

        <Button
            android:id="@+id/stage4_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/goal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/stage4"
            android:layout_marginTop="10sp"
            android:text="Goal: Complete Yellow Cross"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/filler1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/yellowcross"
            android:layout_below="@+id/goal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5sp"/>

        <TextView
            android:id="@+id/intro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/filler1"
            android:layout_marginTop="10sp"
            android:text="This step forms the cross on the yellow side like you did with the white side at the beginning."
            android:textStyle="bold"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/instructions1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/intro"
            android:text="When performing the algorithms in this step, make sure that the yellow side of the cube is facing up (turn your cube upside down)."
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/instructions2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/instructions1"
            android:text="If your yellow edges make a line like the image shown below, perform this algorithm. Make sure to turn the cube so the line is horizontal: F, R, U, R’, U’, F’"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/instructions3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_below="@id/instructions2"
            android:text="If your yellow edges make an angle like the image shown below, perform this algorithm. Make sure to turn the cube so angle is formed with the bottom yellow edge and the right yellow edge (Note: the lowercase ‘f’ in this algorithm means to turn the first two layers instead of only the front layer): f, R, U, R’, U’, f’"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/instructions4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_below="@id/instructions3"
            android:text="If none of the yellow edges are on the top, perform this algorithm to make one of the situations above: F, R, U, R’, U’, F’ "
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/instructions5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/instructions4"
            android:text="Then, use the necessary algorithm above to complete this stage."
            android:gravity="center_horizontal" />

    </RelativeLayout>

</ScrollView>