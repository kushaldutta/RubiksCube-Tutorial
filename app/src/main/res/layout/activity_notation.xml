<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Notation">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notation"
            android:gravity="center"
            android:textSize="36sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/noteback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="Back"/>

        <TextView
            android:id="@+id/notation_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/noteback"
            android:layout_marginTop="7.5sp"
            android:text="In any tutorial for the Rubik’s Cube, you’ll see a combination of several letters which tell you which parts of the cube to move. Combining moves to reorient the cube in a certain way is called an algorithm. There will be multiple algorithms in this tutorial, so make sure you understand what all of these letters mean."
            android:gravity="center" />

        <ImageView
            android:id="@+id/rmove"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_below="@id/notation_info"
            android:layout_marginTop="50sp"
            android:src="@drawable/rmove" />

        <ImageView
            android:id="@+id/lmove"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_toRightOf="@id/rmove"
            android:src="@drawable/l"
            android:layout_below="@id/notation_info"
            android:layout_marginTop="50sp"/>

        <ImageView
            android:id="@+id/f_move"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_toRightOf="@id/lmove"
            android:src="@drawable/f"
            android:layout_below="@id/notation_info"
            android:layout_marginTop="50sp"/>

        <ImageView
            android:id="@+id/u_move"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_toRightOf="@id/f_move"
            android:src="@drawable/u"
            android:layout_below="@id/notation_info"
            android:layout_marginTop="50sp"/>


    </RelativeLayout>
</ScrollView>