<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".stage5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/stage5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stage 5"
            android:layout_centerHorizontal="true"
            android:textSize="36dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/stage5_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

        <Button
            android:id="@+id/stage5_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/stage5_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stage5"
            android:layout_marginTop="10sp"
            android:text="Goal: Complete Yellow Side"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"/>

    </RelativeLayout>
</ScrollView>